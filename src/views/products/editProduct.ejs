<!DOCTYPE html>
<html lang="es">
    <%- include ("../partials/head.ejs") %> 
<body>
    <%- include ("../partials/header.ejs") %> 
    <main>    
        <% if (product) { %>   
        <form method="post" action="/update/<%= product.id %>?_method=PUT" enctype="multipart/form-data" id="infoProducto">
            <section id="imagen">
                <figure>
                    <img src="<%= product.images[0].url %>">
                </figure>
                <input type="file" id="submit" value="Editar" class="boton-img">
            </section>
            <section id="detalles">
                <label id="id" name="id">N° de Producto: <%= product.id %></label>
                <input type="text" id="producto" name="producto" placeholder="<%= product.name %>">
                <article id="precio">
                    <p>$</p>
                    <input type="number" placeholder="<%= product.price %>" id="precio" name="precio">
                </article>
                <textarea placeholder="<%= product.descr%>" id="descr" name="descr"></textarea>
                <select id="type">
                    <option value="" selected>Editar categoría</option>
                    <% category.forEach(category => { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                    <% }) %>
                </select>
                <select id="size">
                    <option value="" selected>Editar tamaño</option>
                    <% size.forEach(size => { %>
                        <option value="<%= size.id %>"><%= size.name %></option>
                    <% }) %>
                </select>
                <select id="oferts">
                    <option value="" selected>Editar oferta</option>
                    <option value="true">En oferta</option>
                    <option value="false">Sin oferta</option>
                </select>
                <input type="button" id="submit" value="Editar">
                <input type="button" id="reset" value="Resetear campo">
            </section>
        </form> 
        <% } %>
    </main>
    <%- include ("../partials/footer.ejs") %> 
</body>
</html>