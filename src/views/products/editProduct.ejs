<!DOCTYPE html>
<html lang="es">
    <%- include ("../partials/head.ejs") %> 
<body>
    <%- include ("../partials/header.ejs") %> 
    <main>    
        <% if (product) { %>   
        <form method="post" action="/update/<%= product.id %>?_method=PUT" enctype="multipart/form-data" id="infoProducto">
            <section id="imagen">
                <figure>
                    <img src="<%= product.images[0].url %>">
                </figure>
                <input type="file" id="submit" value="Editar" class="boton-img">
            </section>
            <section id="detalles">
                <label id="id" name="id">N° de Producto: <%= product.id %></label>
                <input type="text" id="producto" name="producto" placeholder="<%= product.name %>">
                <article id="precio">
                    <p>$</p>
                    <input type="number" placeholder="<%= product.price %>" id="precio" name="precio">
                </article>
                <textarea placeholder="<%= product.descr%>" id="descr" name="descr"></textarea>
                <select id="type">
                    <option value="" selected>Editar categoría</option>
                    <% category.forEach(category => { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                    <% }) %>
                </select>
                <select id="size">
                    <option value="" selected>Editar tamaño</option>
                    <% size.forEach(size => { %>
                        <option value="<%= size.id %>"><%= size.name %></option>
                    <% }) %>
                </select>
                <select id="oferts">
                    <option value="" selected>Editar oferta</option>
                    <option value="true">En oferta</option>
                    <option value="false">Sin oferta</option>
                </select>
                <input type="button" id="submit" value="Editar">
                <input type="button" id="reset" value="Resetear campo">
            </section>
        </form> 
        <% } %>
    </main>
    <footer>
    <section id="footer-first-section">
        <nav class="footer-item">
            <h3>¡Escribinos!<br>
            <a href="#">hola@natuur.com.ar</a></h3>
            <p><a href="#">Formá parte de nuestro equipo</a></p>
            <p><a href="#">Términos y Condiciones</a></p>
        </nav>
        <hr id="footer-linea">
        <section class="footer-item">
            <h3>Métodos de pago</h3>
            <section class="methods-p">
                <i class="fab fa-cc-visa"></i>
                <i class="fab fa-cc-mastercard"></i>
                <i class="fab fa-cc-amex"></i>
                <i class="fab fa-cc-paypal"></i>
                <i class="fab fa-bitcoin"></i>
            </section>
        </section>
        <section class="footer-item">
                <form>
                    <input type="email" id="email" name="email" placeholder="NEWSLETTER">
                    <button type="submit" action="/" method="POST">Enviar</button>
                </form>
                <nav class="social-media">
                    <a href="#"><i class="fab fa-facebook-square"></i></a>
                    <a href="#"><i class="fab fa-instagram-square"></i></a>
                    <a href="#"><i class="fab fa-twitter-square"></i></a>
                </nav>
        </section>
    </section>
    <section id="footer-second-section">
        <p>Copyright © 2021 Natuur</p>
    </section>
    
</footer> 
</body>
</html>