<!DOCTYPE html>
<html>
    <%- include ("../partials/head.ejs") %> 
<body>
    <%- include ("../partials/header-index.ejs") %> 
    <main class="main-register"> 
        <form action="/" method="GET">
            <p class="bienvenido">CREA TU CUENTA</p>
            <input class="formulario-register" type="text" placeholder="Nombre"name="nombre" id="nombre" minlength="3" required>
            <input class="formulario-register" type="text" placeholder="Apellido"name="apellido" id="apellido" minlength="3" required>
            <input class="formulario-register" type="text" placeholder="Nombre de usuario"name="usuario" id="usuario" minlength="5" required>
            <input class="formulario-register" type="email" placeholder="Email"name="email" id="email" required>
            <input class="formulario-register" type="password" placeholder="Contraseña" name="password" required>
            <input class="formulario-register" type="password" placeholder="Repetir contraseña" name="confirm-password" required>
        <section class="button-google">
            <button name="google" id="google">
                <i class="fab fa-google"></i>
            </button>
        </section>
        <section class="button-enviar">
                <button type="submit" name="enviar" id="enviar">Registrarse</button>
        </section>
    </main>
    <%- include ("../partials/footer.ejs") %> 
</body>
</html>